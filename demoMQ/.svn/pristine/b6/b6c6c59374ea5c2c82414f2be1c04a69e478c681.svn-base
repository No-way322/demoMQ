*html body {
    height: 100%;
    font-weight: bold;
}

#showDiv {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1987;
    width: 100%;
    height: 100%;
    /*background: #EBEBEB; /*#000;*/
    filter: alpha(opacity=70);
    opacity: 0.7;
}

.loginwindow {
    width: 400px;
    height: 310px;
    position: absolute;
}

.title {
    height: 60px;
    line-height: 60px;
    color: #fff;
    font-weight: bolder;
    font-size: 22px;
    text-align: center;
    background-color: #1d9a78;
    border-radius: 8px 8px 0 0;
    background-image: url('../green/images/login_icon.png');
    background-repeat: no-repeat;
    background-position: 120px 15px;
}

.login_body {
    background-color: #e4fbf4;
    height: 250px;
    border-radius: 0 0 8px 8px;
    /*background-image: url('../green/images/bg1.png');*/
}

.textbox {
    border-color: #3fbe8d;
    border-radius: 0;
}

.validatebox-invalid {
    border-color: #fbfbfb;
}

.login_body table tr td {
    padding: 15px 0;
}

.loginbutton {
    padding: 9px 25px;
    background-color: #2eb58f;
    text-decoration: none;
    color: #fff;
    font-size: 16px;
    font-weight: bolder;
    border-radius: 3px;
}

a.loginbutton:hover {
    background-color: #60ccb0;
}

a.loginbutton:active {
    background-color: #398e78;
}
.login_body td{
    color: #1d9a78;
}

.td-left{
    text-align: right;
}