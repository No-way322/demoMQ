body {
    background: url('images/bg.png');
    margin:0;
    padding:0;
}

h1,h2,h3,h4,p{
    margin:0;
    padding:0;
}

.txtColor{
    color: #47dae3;
}

.txtCenter{
    text-align:center;
}

.txtBig{
    font-size:30px;
}

.txtNormal{
    font-size:20px;
}

.txtSmall{
    font-size:16px;
}

.titleBackground {
    border: solid 1px rgb(1, 44, 49);
    background: -moz-linear-gradient( 90deg, rgb(1,44,49) 0%, rgb(2,75,81) 42%, rgb(8,155,165) 100%);
    background: -webkit-linear-gradient( 90deg, rgb(1,44,49) 0%, rgb(2,75,81) 42%, rgb(8,155,165) 100%); 
}

.searchbox {
    width: 100%;
    margin-bottom: 5px !important;
}


/*滚动条样式*/

::-webkit-scrollbar,
::-webkit-scrollbar:hover,
::-webkit-scrollbar-track {
    background-color: #053238;
}

::-webkit-scrollbar-corner,
::-webkit-scrollbar-thumb,
::-webkit-scrollbar-thumb:hover {
    background: #094047;
}

::-webkit-scrollbar-button:horizontal:single-button:start {
    background: url(/Images/scrollbar/left.png);
}

::-webkit-scrollbar-button:horizontal:single-button:end {
    background: url(/Images/scrollbar/right.png);
}

::-webkit-scrollbar-button:vertical:single-button:start {
    background: url(/Images/scrollbar/up.png);
}

::-webkit-scrollbar-button:vertical:single-button:end {
    background: url(/Images/scrollbar/down.png);
}

#body #Repair > .buttondiv {
    bottom: -10px;
}